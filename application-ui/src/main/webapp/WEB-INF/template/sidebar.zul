<?xml version="1.0" encoding="UTF-8"?>
<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<style>
		/*.z-treerow:nth-child(even) {background: #F9F9FF}*/
		.z-tree-icon .z-tree-open { background-image:
		url(data:image/gif;base64,);
		background-size: cover; width: 100%; } .z-tree-icon
		.z-tree-close { background-image:
		url(data:image/gif;base64,);
		background-size: cover; width: 100%; } /*remove the font awesome
		icon*/ .z-tree-icon .z-tree-open::before, .z-tree-icon
		.z-tree-close::before { content: ''; }

	</style>

	<div width="100%" height="100%" vflex="true"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('ui.template.SideBarVmd')">
		<tabbox id="tb" width="100%" height="100%"  mold="accordion">		
			<tabs id="tbs" align="center" children="@load(vm.mstMenuDtos)">
				<template name="children">
					<tab label="@load(each.menuName)" iconSclass="z-icon-reorder" />
				</template>
			</tabs>
			<tabpanels children="@load(vm.listMenuTreeModel)">
				<template name="children">
					<tabpanel>					
						<vlayout height="100%">
							<tree model="@load(each)" sizedByContent="true"
								vflex="1">
								<template name="model" var="item">
									<treeitem  height="500px">
										<treerow>
											<treecell
												label="@load(item.data.menuName)"
												onClick="@command('toogleTree', tree = self.tree)"
												if="${item.data.menuType eq 'G'}" />
												
											<treecell
												context="m_${item.data.menuCode }" label="@load(item.data.menuName)"
												onClick="@command('navi', uri=item.data.menuUrl, menuCode=item.data.menuCode, title=item.data.menuName)" 
												if="${item.data.menuType ne 'G' and item.data.menuType ne 'F'}">
											</treecell>											
										</treerow>
									</treeitem>
								</template>
							</tree>
						</vlayout>
					</tabpanel>
				</template>
			</tabpanels>
		</tabbox>
		<tree id="categoriesTree" model="@load(vm.menuTrees)" width="220px" vflex="1">
			<treecols>
				<treecol></treecol>
			</treecols>
            <template name="model">
                <treeitem>
                    <treerow>
                        <treecell onClick="@command('toogleTree', tree=self.tree)" label="@load(each.menuName)" />
                    </treerow>
                </treeitem>
            </template>
        </tree>
	</div>
</zk>